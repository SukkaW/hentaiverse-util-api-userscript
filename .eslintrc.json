{
  "root": true,
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "extends": "sukka/typescript",
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    },
    {
      "files": [
        "**/*.js"
      ],
      "extends": "sukka/node",
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}